<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/content_block"
        android:contentDescription="Item image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/tvItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Item 1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivItems"

        />

    <TextView
        android:id="@+id/tvItemTPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MRP: â‚¹100.0"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvItemTitle"
        app:layout_constraintStart_toEndOf="@id/ivItems"

        />

    <TextView
        android:id="@+id/tvItemExtra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Same Day Shipping"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvItemTitle"
        app:layout_constraintBaseline_toBaselineOf="@id/tvItemTPrice"
        app:layout_constraintRight_toRightOf="parent"
         />



</androidx.constraintlayout.widget.ConstraintLayout>