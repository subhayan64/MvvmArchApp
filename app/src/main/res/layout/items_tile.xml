<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingBottom="14dp">

    <ImageView
        android:id="@+id/ivItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Item image"
        android:src="@drawable/content_block"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/tvItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivItems"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Item 1"

        />

    <TextView
        android:id="@+id/tvItemTPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/ivItems"

        app:layout_constraintTop_toBottomOf="@id/tvItemTitle"
        tools:text="MRP: â‚¹100.0"

        />

    <TextView
        android:id="@+id/tvItemExtra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvItemTPrice"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Same Day Shipping" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="@color/divider_color"
        app:layout_constraintStart_toStartOf="@+id/tvItemTPrice"
        app:layout_constraintTop_toBottomOf="@id/tvItemTPrice" />


</androidx.constraintlayout.widget.ConstraintLayout>